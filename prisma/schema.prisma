generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                   String   @id @default(cuid())
  email                String   @unique
  name                 String?
  microsoftId          String?   // From Azure AD's oid or sub claim
  accessToken          String?   // Current access token from Azure
}


model Session {
  id          String        @id @default(uuid())       // unique session ID
  fileName    String 
  summary     String                              // name of uploaded file
  createdAt   DateTime      @default(now())            // timestamp
  chatHistory ChatMessage[]                            // relation: one session â†’ many messages
}

// Each message in the chatbot (user or bot)
model ChatMessage {
  id         Int      @id @default(autoincrement())    // message ID
  sessionId  String                                   // foreign key
  session    Session  @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  role       String                                   // "user" or "bot"
  content    String                                   // actual text
  createdAt  DateTime @default(now())                 // timestamp
}
